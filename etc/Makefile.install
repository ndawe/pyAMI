PYTHON ?= python

all:
	$(PYTHON) bootstrap.py
	./bin/buildout
	# remove extra buildout files and directories
	rm -f ./bin/buildout
	rm -rf ./eggs/zc.*
	rm -rf ./develop-eggs
	rm -rf ./parts
	rm -f .installed.cfg

clean:
	rm -rf ./bin
	rm -rf ./eggs

clean-deploy:
	rm -f bootstrap.py
	rm -f buildout.cfg
	rm -rf ./cache
	# set the permissions
	find . -type f | xargs chmod 644
	find . -type d | xargs chmod 755
	chmod 755 ./bin/*
	# remove the Makefile
	rm -f Makefile

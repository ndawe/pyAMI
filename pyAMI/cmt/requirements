ignore_pattern rulechecker
# static ALIAS
alias makeAMICommandList makeAMICommandList.py
alias amiListAllCommands 'more ${PYAMIROOT}/share/listAllAMICommands.txt'
alias amiHelp 'more ${PYAMIROOT}/share/AMIHelp.txt'
alias amiCommand 'python ${PYAMIROOT}/python/pyAMI.py'

